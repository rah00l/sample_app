<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th colspan="0">Book Name</th>
      <th colspan="0">Book Price</th>
      <th colspan="0">Tag</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.name %></td>
        <td><%= book.tag_list %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

